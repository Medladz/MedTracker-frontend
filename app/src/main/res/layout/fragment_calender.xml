<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/FragmentBackground"
    android:layout_marginBottom="53dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="175dp"
        android:layout_marginTop="342dp"
        android:layout_marginEnd="180dp"
        android:layout_marginBottom="370dp"
        android:text="@string/calender"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="@drawable/container_panel"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="10dp">


        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hier de genres"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:textColor="@color/TextColor"/>

        <View
            android:id="@+id/devider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="30dp"
            android:background="@android:color/darker_gray" />

        <Button
            android:id="@+id/ButtonDay"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_alignTop="@id/devider"
            android:layout_marginStart="35dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_background_selected"
            android:text="Day"
            android:textColor="@color/TextColor" />

        <Button
            android:id="@+id/ButtonWeek"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_alignTop="@id/devider"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_background"
            android:text="Week"
            android:textColor="@color/TextColor" />

        <Button
            android:id="@+id/ButtonMonth"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_background"
            android:layout_marginEnd="35dp"
            android:text="Month"
            android:textColor="@color/TextColor"
            android:layout_alignTop="@id/devider"
            android:layout_alignEnd="@id/devider"/>
        <View
            android:id="@+id/devider2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="50dp"
            android:layout_alignTop="@id/ButtonDay"
            android:background="@android:color/darker_gray" />
        <include
            layout="@layout/calander_day"
            android:layout_width="match_parent"
            android:layout_alignTop="@id/devider2"
            android:layout_margin="7dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>